# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
alias vim=/usr/bin/nvim
alias ls='eza --icons --color=always --show-symlinks'
alias lart='eza -als=time --icons --color=always --show-symlinks'
alias la='eza -al --icons --color=always --show-symlinks'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias python3='python'
cd() {
    builtin cd "$@" && ls
}

autoload -Uz add-zsh-hook

function load_plugins_after_prompt() {
  source $ZSH_CUSTOM/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
  source $ZSH_CUSTOM/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
  # Remove hook after loading once
  add-zsh-hook -d precmd load_plugins_after_prompt
}
add-zsh-hook precmd load_plugins_after_prompt
