

{
    "window.commandCenter": 1,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "jupyter.debugJustMyCode": false,
    "editor.lineNumbers": "relative",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.fontFamily": "Fira Code iCursive s12, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontFamily": "Fira Code iCursive s12, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "prettier.enable": true,
    "editor.formatOnSave": true,
    "[python]": {
      "editor.formatOnSave": true
  },
    // Enable smooth scrolling animation
  "editor.smoothScrolling": true,
  // Vim Configuration
  // Enable easymotion plugin for quick navigation
  "vim.easymotion": true,
  // Enable incremental search highlighting
  "vim.incsearch": true,
  // Use system clipboard for vim operations
  "vim.useSystemClipboard": true,
  // Enable Ctrl key combinations
  "vim.useCtrlKeys": true,
  // Enable search highlight
  "vim.hlsearch": true,
  // Set space as the leader key
  "vim.leader": " ",
  // Enable vim-sneak plugin for improved motion
      // removed in favor of easy motion
  // "vim.sneak": true,
  // Use relative line numbers in normal mode
  "vim.smartRelativeLine": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "s"]
    },    
    { "before": [":"],
     "commands": ["vim.showQuickpickCmdLine"]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "s"]
    },    
    { "before": [":"],
     "commands": ["workbench.action.showQuickpickCmdLine"]
    },
  ]


}
